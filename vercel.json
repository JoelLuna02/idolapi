{
    "version": 2,
    "builds": [
        {
            "src": "dist/server.js",
            "use": "@vercel/node",
            "config": { "includeFiles": ["dist/**"] }
        }
    ],
    "routes": [
        { "handle": "filesystem" },
        { "src": "app/views/public/(.*)", "dest": "app/views/public/$1" },
        { "src": "/(.*)", "dest": "dist/server.js" }
    ]
}
